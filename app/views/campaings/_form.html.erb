<%= simple_form_for @campaing, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :campaingName %>
  <%= error_span(@campaing[:campaingName]) %>
  <%= f.input :campaingCode %>
  <%= error_span(@campaing[:campaingCode]) %>
  <%= f.input :status %>
  <%= error_span(@campaing[:status]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                campaings_path, :class => 'btn btn-default' %>
<% end %>
